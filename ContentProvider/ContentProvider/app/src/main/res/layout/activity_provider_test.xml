<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/provider_button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/provider_button_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="query"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/provider_button_add"/>

    <Button
        android:id="@+id/provider_button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/provider_button_query"/>

    <Button
        android:id="@+id/provider_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/provider_button_update"/>

</androidx.constraintlayout.widget.ConstraintLayout>